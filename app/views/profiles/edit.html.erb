<div class="side-menu">
    <p class="non-active">
      <%= link_to "アカウント", user_path(current_user.id) %>
    </p>
    <p class="active">
      <%= link_to "プロフィール", edit_profile_path(current_user.id) %>
    </p>
  </div>

  <div class="edit-title">
    プロフィール情報編集
  </div>
  <article　class="profile_list">
        <% form_for @profile do |f| %>
      <div class="input-label">
        <%= f.label :profile_name,"ユーザー名" %>
      </div>
      <div class="input-form">
        <%= f.text_field :profile_name %>
      </div>
      <div class="input-label">
        <%= f.label :self_introduction,"自己紹介" %>
      </div>
      <div class="input-form">
        <%= f.text_field :self_introduction %>
      </div>
        <%= f.submit "更新" %>
        <% end %>
    </article>
